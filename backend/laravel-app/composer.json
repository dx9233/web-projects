{
  "name": "laravel/laravel",
  "type": "project",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.3"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^4.0",
    "laravel/pint": "^1.24"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "scripts": {
    "dev": "php artisan serve --host=0.0.0.0 --port=8000",
    "start": "php artisan serve --host=0.0.0.0 --port=8000",
    "setup": [
      "@php -r \"if (!file_exists('database/database.sqlite')) { touch('database/database.sqlite'); }\"",
      "@php artisan migrate --force --quiet"
    ],
    "build": "echo 'âœ… Laravel API requires no build step'",
    "test": "php artisan test"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
