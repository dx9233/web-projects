{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", ".npmrc"],
  "globalEnv": ["NODE_ENV"],

  "tasks": {
    // Config
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "out/**",
        "public/build/**",
        "../django-app/static/dist/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*",
        "public/**/*",
        "*.config.{js,ts,json}",
        "*.{config,conf}.{js,ts,json}",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.jsx",
        "src/**/*.js",
        "test/**/*.ts",
        "test/**/*.js"
      ]
    },

    // NextJS
    "nextjs-portfolio#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_OPTIONS=--max-old-space-size=4096"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*",
        "public/**/*",
        "*.config.{js,ts,json}",
        "*.{config,conf}.{js,ts,json}",
        "next.config.{js,ts}",
        "app/**/*",
        "pages/**/*",
        "components/**/*"
      ]
    },

    // Astro
    "astroblog#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },

    "mainportfolio#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },

    // Vite
    "luxurycar-react#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },

    "react-portfolio#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },

    "strikethehub#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },

    "beauty-salon#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },

    // Dev Task
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$"]
    },

    "lint": {
      "outputs": []
    },

    "test": {
      "outputs": []
    }
  }
}
